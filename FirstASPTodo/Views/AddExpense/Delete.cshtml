@model Expenses
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="bordder p-3 mt-4">
        <div class=" row pb-2">
            <h2 class="text-primary">Delete a task <i class="bi bi-arrow-down" style="width:500px"></i></h2>
            <hr />

        </div>
        <div asp-validation-summary="All">

        </div>
        <div class="mb-3">
            <label asp-for="ExpenseName"></label>
            <input asp-for="ExpenseName"class="form-control" />
            <span asp-validation-for="ExpenseName" disabled class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ExpenseDescription"></label>
            <input asp-for="ExpenseDescription" class="form-control" />
            <span asp-validation-for="ExpenseDescription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ExpenseAmount"></label>
            <input asp-for="ExpenseAmount" class="form-control" />
            <span asp-validation-for="ExpenseAmount" disabled class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px"> Delete</button>
        <a asp-controller="AddExpense" asp-action="Index" class="btn btn secondary" style=" width:150px"> Back to List</a>

    </div>
</form>


@section Scripts{ 
    @{
<partial name="_ValidationScriptsPartial" />
}
}


