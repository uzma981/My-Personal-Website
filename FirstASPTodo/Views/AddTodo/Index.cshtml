@model IEnumerable<TodoCategory>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null) { 
<h2>@TempData["success"]</h2>
     }

<div class= "container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class= "text-primary"> To do List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AddTodo" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle-dotted"></i>&nbsp; Add</a>
        </div>
    </div>
</div>

<table class= "table table-bordered table-striped" style="width:100%">
    <thead>
        <tr><th>
                Display Order
            </th>
            <th>
                Task List
            </th>
            <th>
                Date Time Created
            </th>
            
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
            {
        <tr><td width="10%" >
                @obj.DisplayOrder
            </td>
            <td width="40%">
                @obj.Name
            </td>
            <td width="20%" >
                @obj.CreatedDateTime
            </td>
            
            <td width="30%">
                <div class=" w-75 btn-group" role="group">
                    <a asp-controller="AddTodo" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="AddTodo" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Remove</a>
                </div>
            </td>
            
        </tr>
            }
    </tbody>
</table>